              <put-attribute name="menu" value="/WEB-INF/views/templates/menu.jsp" />
              <put-attribute name="bodyContent" value="" />
              <put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp" />
       </definition>

       <definition name="signin" extends="DefaultTemplate">
              <put-attribute name="bodyContent" value="/WEB-INF/views/loginjsp/signin.jsp" />
       </definition>

       <definition name="registration" extends="DefaultTemplate">
              <put-attribute name="bodyContent" value="/WEB-INF/views/loginjsp/registration.jsp" />
       </definition>

       <definition name="logged" extends="DefaultTemplate">
              <put-attribute name="bodyContent" value="/WEB-INF/views/loginjsp/logged.jsp" />
       </definition>

       <definition name="messages" extends="DefaultTemplate">
              <put-attribute name="bodyContent" value="/WEB-INF/views/loginjsp/messages.jsp" />
